<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" >
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('./styles/main.css') }}">
    </head>
    <body>
        <div class="container-fluid">
            <div class="bg">
                <div class="bg_pattern">
                    <div class="wraper">
                        <header>
                            <div class="logo">
                                <div class="logo-top">The</div>
                                <div class="logo-bottom"><span>news</span>reporter</div>
                            </div>
                            <div class="weath-exchange-rates float-right">
                                <div class="weather">
                                    <div class="weath-city">
                                        Kiev
                                    </div>
                                    <div class="weath-temp">
                                        +11C
                                    </div>
                                </div>
                                <div class="exchange-rates">
                                    <div class="usd">
                                        USD</br> 27.10
                                    </div>
                                    <div class="eur">
                                        EUR</br> 31.80
                                    </div>
                                </div>
                            </div>
                            <ul class="nav float-right main-nav">
                                <li class="nav-item"><a class="nav-link active" href="">home</a></li>
                                <li class="nav-line"></li>
                                <li class="nav-item"><a class="nav-link" href="">About us</a></li>
                                <li class="nav-line"></li>
                                <li class="nav-item"><a class="nav-link" href="">contact</a></li>
                                <li class="nav-line"></li>
                                <li class="nav-item">
                                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
<div class="btn-group">
  <button type="button" class="btn nav-link dropdown-toggle btn-link btn-sm" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Hi, {{ app.user.username }} 
  </button>
  <div class="dropdown-menu">
    <a class="dropdown-item" href="{{ path('user_show', {'id': app.user.id }) }}">Profile</a>
{% if is_granted('ROLE_SUPER_USER') %}
    <a class="dropdown-item" href="{{ path('user_index') }}">Users list</a>
{% endif %}
    <a class="dropdown-item" href="{{ logout_path() }}">Sign out</a>
  </div>
</div>
    
                                    {% else %}
                                            <a href="login" class="nav-link">Sign in</a>
                                    {% endif %}
                                </li>
                            </ul>
                        </header>
                        <nav class="navbar navbar-dark bg-dark">
                            <a class="navbar-brand" href="#">world news</a>
                            <a class="navbar-brand" href="#">sports</a>
                            <a class="navbar-brand" href="#">tech</a>
                            <a class="navbar-brand" href="#">busines</a>
                            <a class="navbar-brand" href="#">movies</a>
                            <a class="navbar-brand" href="#">culture</a>
                            <a class="navbar-brand" href="#">books</a>
                            <a class="navbar-brand" href="#">blogs</a>
                        </nav>
                        <main>
                            <div class="">
                                {% block body %}{% endblock %}
                            </div>
                        </main>
                    </div>
                </div>
            </div>
        </div>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
